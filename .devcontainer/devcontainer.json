{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    }
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },
  "onCreateCommand": "echo 'Select your development environment'",
  "updateContentCommand": "echo 'Updating content...'",
  "postCreateCommand": "echo 'Setup complete'",
  "remoteUser": "codespace",
  "customizations": {
    "codespaces": {
      "repositories": {
        "*": {
          "devcontainerFiles": [
            {
              "path": "project-A/.devcontainer/devcontainer.json",
              "label": "Node.js Development (Project A)"
            },
            {
              "path": "project-B/.devcontainer/devcontainer.json",
              "label": "Python Development (Project B)"
            }
          ]
        }
      }
    }
  }
}
